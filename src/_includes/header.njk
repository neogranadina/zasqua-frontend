<header class="site-header">
  <div class="container">
    <a href="/" class="site-logo">
      <img src="/img/neogranadina-plain.png" alt="{{ site.title }}">
      <span class="site-logo-text">Neogranadina: <strong>{{ site.title }}</strong></span>
    </a>
    <button class="hamburger-toggle" type="button" aria-label="Menu" aria-expanded="false">
      <span class="material-symbols-outlined">menu</span>
    </button>
    <nav class="site-nav">
      <a href="/">{{ ui.nav.home }}</a>
      <a href="/buscar/">{{ ui.nav.search }}</a>
      <form class="header-search" action="/buscar/" method="get">
        <input type="search" name="q" placeholder="{{ ui.search.placeholder }}">
        <button type="submit"><span class="material-symbols-outlined">search</span></button>
      </form>
    </nav>
  </div>
</header>
